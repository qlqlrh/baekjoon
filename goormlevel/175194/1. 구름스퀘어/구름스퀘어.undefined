import sys
input = sys.stdin.readline

N = int(input())
data = [list(map(int, input().split())) for _ in range(N)]

# 시작 시간 기준으로 정렬
# 행사 선택지 : 열림, 안 열림
# 2중 for문 돌면서 가능한 행사 개수 기록
# 그 중 제일 큰 거 선택

data.sort(key=lambda x: (x[1], x[0]))
# print(data)

last_end = -1
cnt = 0

for s, e in data:
	if s >= last_end + 1:
		cnt += 1
		last_end = e

print(cnt)